WindowManager:
  MainView:
  RegisterView:

<MainView>
  name: "main"
  GridLayout:
    padding: 30, 50, 30, 50
    cols: 1

    Image:
      source: "Views/Images/diario.png"
      size_hint_y: 0.5

    Label:
      id:label
      text: "Entre ou Registre-se"

    GridLayout:
      size: root.width, root.height
      cols: 2
      size_hint_y: 0.2

      Button:
        text: "Login"
        on_release:label.text = "Redirecionando..."

      Button:
        text: "Registrar"
        on_release:app.root.current = "register"

<RegisterView>
  name: "register"
  GridLayout:
    padding: 30, 50, 30, 50
    cols: 1

    Image:
      source: "Views/Images/diario.png"
      size_hint_y: 0.5

    Label:
      id:label
      text: "Registre-se"

    GridLayout:
      size: root.width, root.height
      cols: 2
      size_hint_y: 0.2

      Button:
        text: "Voltar"
        on_release:app.root.current = "main"

      Button:
        text: "Registrar"
        on_release:label.text = "Redirecionando..."
