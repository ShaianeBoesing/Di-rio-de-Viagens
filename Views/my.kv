#: import NoTransition kivy.uix.screenmanager.NoTransition

<Screen>:
  on_leave: app.previous_screen = self.name

<MainView>
  GridLayout:
    padding: 30, 50, 30, 50
    cols: 1

    Image:
      source: "Views/Images/diario.png"
      size_hint_y: 0.5

    Label:
      text: "Entre ou Registre-se"

    GridLayout:
      size: root.width, root.height
      cols: 2
      size_hint_y: 0.2

      Button:
        text: "Login"
        on_press:

      Button:
        text: "Registrar"
        on_release:
          app.root.current = "register"

<RegisterView>
  GridLayout:
    padding: 30, 50, 30, 50
    cols: 1

    Image:
      source: "Views/Images/diario.png"
      size_hint_y: 0.5

    Label:
      text: "Registre-se"

    GridLayout:
      size: root.width, root.height
      cols: 2
      size_hint_y: 0.2

      Button:
        text: "Voltar"
        on_release:
          root.manager.current = app.previous_screen

      Button:
        text: "Registrar"
        on_release: root.register()

<WindowManager>:
  transition: NoTransition()
  MainView:
    name: "main"
  RegisterView:
    name: "register"
